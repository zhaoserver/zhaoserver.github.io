<% 
const teachers = site.pages.data.filter(({type}) => type==page.filter)
%>
<style>
  .title {
    color: #5D5D5D;
    font-size: 38px;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: 0.38px;
  }

  .description {
    margin-top: 25px;
    color: #989898;
    font-family: "Inria Sans";
    font-size: 20px;
    line-height: 1.3;
  }

  .teachers {
    gap: 32px;
    padding: 0;
    display: flex;
    margin-top: 33px;
    list-style: none;
    flex-direction: column;
  }

  .teacher-item {
    gap: 48px;
    height: 584px;
    display: flex;
    overflow: hidden;
    border-radius: 6px;
    background-color: #FFF;
    border: 2px solid #5CCAFF;
    border-left-width: 20px;
  }

  .teacher-cover {
    width: 416px;
    height: 100%;
    object-fit: cover;
  }

  .teacher-info {
    width: 0;
    flex: 1;
    padding: 110px 48px 0 0;
  }

  .teacher-title {
    color: #15B1FA;
    font-size: 28px;
    font-weight: 600;
    line-height: 1.3;
  }

  .teacher-desc {
    color: #8E8E8E;
    font-family: "Inria Sans";
    font-size: 16px;
    line-height: 1.3;
  }

  .teacher-desc ul {
    padding-left: 30px;
    list-style-type: disc;
  }
</style>
<main class="container">
  <%- partial('_widget/carousel', {id: 'carousel', list: page.banners}) %>
  <h3 class="title mt30"><%= page.title %></h3>
  <section class="description">
    <%- page.content %>
  </section>
  <ul class="teachers">
    <% pages_auto_filter().forEach(teacher => { %>
    <li class="teacher-item">
      <img class="teacher-cover" src="<%- url_for(teacher.cover) %>" alt="<%= teacher.name %>">
      <div class="teacher-info">
        <h3 class="teacher-title"><%= teacher.title %></h3>
        <section class="teacher-desc">
          <%- teacher.content %>
        </section>
      </div>
    </li>
    <% }) %>
  </ul>
</main>