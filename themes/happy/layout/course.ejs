<style>
  .title {
    color: #5D5D5D;
    text-align: center;
    font-size: 38px;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: 0.38px;
    margin: 55px auto;
  }

  .main {
    gap: 22px;
    display: flex;
    padding-bottom: 30px;
  }

  .content {
    flex: 1 1 716px;
    width: 716px;
    height: 1072px;
    padding: 30px 36px;
    border: 1px solid #ADADAD;
  }

  .info {
    flex: 1 1 423px;
    width: 424px;
    height: 640px;
    padding: 11px;
    border: 1px solid #ADADAD;
    display: flex;
    flex-direction: column;
  }

  .cover {
    width: 400px;
    height: 224px;
    object-fit: cover;
    background: #D9D9D9;
  }

  .info-content {
    height: 0;
    flex: 1;
    padding: 7px;
    margin-top: 14px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .price {
    color: #505050;
    font-size: 36px;
    font-weight: 700;
    line-height: 1.3;
  }

  .name {
    color: #505050;
    font-size: 24px;
    font-weight: 700;
    line-height: 1.3;
  }

  .teacher {
    color: #3BCAE9;
    font-feature-settings: 'clig' off, 'liga' off;
    font-family: "Inria Sans";
    font-size: 16px;
    font-weight: 700;
    line-height: 1.3;
  }

  .desc {
    color: #989898;
    font-feature-settings: 'clig' off, 'liga' off;
    font-family: "Inria Sans";
    font-size: 16px;
    font-weight: 400;
    line-height: 1.3;
  }

  .time {
    color: #9B9B9B;
    font-feature-settings: 'clig' off, 'liga' off;
    font-family: "Inria Sans";
    font-size: 16px;
    line-height: 1.3;
  }

  .register {
    display: block;
    width: 100%;
    height: 66px;
    background: #FF7900;
    color: #FFF;
    font-size: 24px;
    font-weight: 700;
    text-align: center;
    line-height: 66px;
    text-decoration: none;

    &:hover {
      color: #FFF;
      text-decoration: none;
    }
  }
</style>
<%- partial('_widget/carousel', {id: 'carousel', list: page.banners}) %>
<main class="container mt30">
  <h3 class="title"><%= page.title %></h3>
  <section class="main">
    <div class="content">
      <%- page.content %>
    </div>
    <div class="info">
      <% if(page.video) { %>
      <video class="cover" src="<%= url_for(page.video) %>"></video>
      <% } else { %>
      <img class="cover" src="<%= url_for(page.cover) %>"></img>
      <% } %>
      <div class="info-content">
        <div>
          <h4 class="price">$<%= page.price.toFixed(2) %></h4>
          <h2 class="name"><%= page.name %></h2>
          <span class="teacher"><%= page.teacher %></span>
          <p class="desc"><%= page.description %></p>
          <span class="time">time: <%= page.time %></span>
        </div>
        <a class="register" target="_blank" href="<%=page.register%>">Register</a>
      </div>
    </div>
    </div>

</main>