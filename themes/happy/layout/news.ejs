<style>
  .news {
    list-style: none;
    padding: 0;
  }

  .news-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 18px;
    line-height: 1.5;
    margin-bottom: 10px;
    padding: 0 3px;
    border-radius: 6px;
    border: 1px solid #b9b6b6;
    height: 60px;
    padding: 0 10px;
    cursor: pointer;

    &:hover {
      border-color: #FF7900;
    }
  }

  .news-link {
    color: inherit;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .news-link:hover {
    color: #FF7900;
    text-decoration: none;
  }

  .time {
    font-size: 12px;
    color: #9d9d9d;
  }
</style>
<div class="container">
  <%- partial('_widget/carousel', {id: 'carousel', list: page.banners}) %>
  <ul class="news mt30">
    <% pages_auto_filter().forEach(({title, path, date}) => { %>
    <li class="news-item">
      <a href="<%- url_for(path) %>" class="news-link">
        <%= title %>
        <span class="time"><%= date.format('YYYY-MM-DD HH:mm:ss') %></span>
      </a>
    </li>
    <% }) %>
  </ul>
</div>