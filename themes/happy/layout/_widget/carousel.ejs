<style>
  .carousel-indicators li {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    margin-left: 9px;
    margin-right: 9px;
  }

  .carousel-item {
    height: 591px;
    background-color: #ccc;
  }

  .carousel-caption {
    right: 0;
    bottom: 0;
    padding: 0;
    width: 88%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    background: linear-gradient(270deg, #5BCAFF 25.52%, rgba(193, 236, 255, 0.00) 100%);
  }

  .carousel-caption h5 {
    width: 564px;
    height: 267px;
    color: #FFF;
    text-align: right;
    text-shadow: 0px 4px 6px rgba(0, 0, 0, 0.40);
    font-family: Montserrat;
    font-size: 60px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.44;
    letter-spacing: -0.6px;
    margin-right: 18%;
  }

  .wave {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 0;
    z-index: 20;
  }
</style>
<% if (list && list.length) { %>
<div id="<%= id %>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% for (let i = 0; i < list.length; ++i) { %>
    <li data-target="#<%= id %>" data-slide-to="<%- i %>" <% if (i === 0) { %> class="active" <% } %>></li>
    <% } %>
  </ol>
  <div class="carousel-inner">
    <% let first = true; for (const { title, cover } of list) { %>
    <div <% if (first) { %> class="carousel-item active" <% } else { %> class="carousel-item" <% } %>>
      <% if (cover) {%>
      <img src="<%- url_for(cover) %>" class="d-block w-100" alt="<%- title %>">
      <% } %>
      <% if (title) {%>
      <div class="carousel-caption">
        <h5><%- title %></h5>
      </div>
      <svg class="wave" width="1440" height="100">
        <path
          d="M 0 100 Q 90 0 260 80 Q 390 126 500 66 Q 650 0 780 40 C 930 80 960 90 1060 90 C 1280 90 1300 0 1440 0 L 1440 100"
          fill="white"></path>
      </svg>
      <% } %>
    </div>
    <% first = false; } %>
  </div>
</div>
<% } %>