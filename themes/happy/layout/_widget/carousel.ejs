<style>
  .carousel-indicators {
    z-index: 999;
  }

  .carousel-indicators-wave {
    bottom: 60px;
  }

  .carousel-indicators li {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    margin-left: 9px;
    margin-right: 9px;
    background-color: #F0F0F0;
  }

  .carousel-item {
    /* height: 591px; */
    background-color: #ccc;
  }

  .carousel-caption {
    right: 0;
    bottom: 0;
    padding: 0;
    width: 88%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    background: linear-gradient(270deg, #5BCAFF 25.52%, rgba(193, 236, 255, 0.00) 100%);
  }

  .carousel-caption h5 {
    width: 564px;
    height: 267px;
    color: #FFF;
    text-align: right;
    text-shadow: 0px 4px 6px rgba(0, 0, 0, 0.40);
    font-family: Montserrat;
    font-size: 60px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.44;
    letter-spacing: -0.6px;
    margin-right: 18%;
  }

  .wave {
    position: absolute;
    width: 100%;
    height: 100px;
    left: 0;
    bottom: 0;
    z-index: 20;
  }
</style>
<% locals.wave = false; %>
<% if (list && list.length) { %>
<div id="<%= id %>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators<%= locals.wave ? ' carousel-indicators-wave' : ''%>">
    <% for (let i = 0; i < list.length; ++i) { %>
    <li data-target="#<%= id %>" data-slide-to="<%- i %>" <% if (i === 0) { %> class="active" <% } %>></li>
    <% } %>
  </ol>
  <div class="carousel-inner">
    <% let first = true; for (const { title, cover } of list) { %>
    <div <% if (first) { %> class="carousel-item active" <% } else { %> class="carousel-item" <% } %>>
      <% if (cover) {%>
      <img src="<%- url_for(cover) %>" class="d-block w-100" alt="<%- title %>">
      <% } %>
      <% if (title) {%>
      <div class="carousel-caption">
        <h5><%- title %></h5>
      </div>
      <% } %>
    </div>
    <% first = false; } %>
  </div>
  <%if (locals.wave) {%>
  <!-- <img class="wave" src="<%= url_for('medias/svg/wave.svg') %>" alt="wave"> -->
  <% } %>
</div>
<% } %>