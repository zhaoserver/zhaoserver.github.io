<style>
  .nav-link.dropdown-toggle::after {
    display: none;
  }

  .nav-item {
    padding: 10px 22px;
  }

  .nav-item:active {
    border-radius: 5px;
    background: #FF7900;
  }

  .nav-item:active .nav-link {
    color: #FFF;
  }

  .nav-link {
    padding: 0 !important;
  }
</style>
<nav class="navbar navbar-expand-lg container">
  <a href="<%- url_for_lang() %>" class="navbar-brand">
    <% if (theme.logo) { %>
    <img src="<%- url_for(theme.logo) %>" width="304" height="60">
    <% } %>
  </a>

  <div class="collapse navbar-collapse">
    <ul class="navbar-nav ml-auto">
      <% for (const {children, name, url} of theme.menus) { %>
      <% if(children) { %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
          <%- __(name) %>
        </a>
        <div class="dropdown-menu">
          <% for(const {url, name} of children){ %>
          <a class="dropdown-item" href="<%- url_for_lang(url)%>">
            <span><%- __(name) %></span>
          </a>
          <% } %>
        </div>
      </li>
      <% } else { %>
      <li class="nav-item">
        <a class="nav-link" href="<%- url_for_lang(url) %>">
          <%- __(name) %>
        </a>
      </li>
      <% } %>
      <% } %>
    </ul>
  </div>
</nav>